<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MovieDetails.MovieFragment">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20"
            android:padding="10"
            android:text="FilmKu"
            android:textColor="@color/black"
            android:textSize="20"
            android:textStyle="bold"
            app:flow_horizontalAlign="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sort_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20"
            android:layout_marginEnd="20"
            android:text="SortBy"
            android:textColor="@color/black"
            android:textSize="20"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/movies_tabs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/movies_tabs" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/movies_tabs"
            android:layout_width="200"
            android:layout_height="50dp"
            android:layout_margin="20"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:foregroundGravity="center"
            android:layoutDirection="ltr"
            app:layout_constraintEnd_toEndOf="@+id/movie_title"
            app:layout_constraintStart_toStartOf="@+id/movie_title"
            app:layout_constraintTop_toBottomOf="@+id/movie_title"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="fill"
            app:tabIndicator="@null"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="0dp"
            app:tabMinWidth="50dp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/black" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movies_RV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10"
            android:layout_marginBottom="20"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movies_tabs"
            tools:listitem="@layout/movie_details" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>